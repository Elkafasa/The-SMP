# Dragon fight bossbars
on dragon spawn:
    if bossbar "to_the_end" doesn't exist:
        create bossbar "to_the_end" titled "&6&lTHE DRAGON IS AWAKE" for all players
    set bossbar progress of bossbar "to_the_end" to 1.0

after 10 seconds:
    if bossbar "dragon_pvp" doesn't exist:
        create bossbar "dragon_pvp" titled "&c&lDRAGON INTERFERENCE: PVP DISABLED" for all players
    set bossbar progress of bossbar "dragon_pvp" to 1.0
